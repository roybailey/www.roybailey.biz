---
import { Tooltip, TooltipTrigger, TooltipContent } from "@/components/starwind/tooltip";
---
<Tooltip>
    <TooltipTrigger>
        <button
                type="button"
                class="flex h-9 w-9 items-center justify-center rounded-lg bg-gray-200 ring-gray-300 transition-all hover:ring-2 dark:bg-gray-600 sm:ml-3"
                id="expander-selector"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-list-plus"><path d="M11 12H3"/><path d="M16 6H3"/><path d="M16 18H3"/><path d="M18 9v6"/><path d="M21 12h-6"/></svg>
        </button>
    </TooltipTrigger>
    <TooltipContent side="left" class="bg-muted">
        Expand All Sections
    </TooltipContent>
</Tooltip>
<script>
    document.getElementById('expander-selector')?.addEventListener('click', () => {
        // console.log("searching for accordion items to open...");
        // document.querySelectorAll('button[data-state="closed"]').forEach((trigger, index) => {
        //     console.log(`found ${trigger.id}`);
        //     trigger.click(); // Simulates user clicking to open the accordion
        // });
        document.querySelectorAll('[data-state="closed"] button.starwind-accordion-trigger').forEach((trigger, index) => {
            // console.log(`found ${trigger.id}`);
            trigger.click(); // Simulates user clicking to open the accordion
        });
    });
</script>
