---
import {Tooltip, TooltipContent, TooltipTrigger} from "../components/starwind/tooltip";
---
<Tooltip>
    <TooltipTrigger>
        <button
                type="button"
                class="flex h-9 w-9 items-center justify-center rounded-lg bg-gray-200 ring-gray-300 transition-all hover:ring-2 dark:bg-gray-600 sm:ml-3"
                id="print-selector"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2M6 9V3a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v6"/><rect width="12" height="8" x="6" y="14" rx="1"/></g></svg>
        </button>
    </TooltipTrigger>
    <TooltipContent side="left" class="bg-muted">
        Print
    </TooltipContent>
</Tooltip>
<script>
    document.getElementById('print-selector')?.addEventListener('click', () => {
        window.print();
    });
</script>
