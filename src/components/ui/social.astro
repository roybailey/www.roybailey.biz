---
import { Icon } from 'astro-icon/components'

interface Props {
    href: string;
    icon: string;
    label: string;
    size?: "md" | "lg";
    block?: boolean;
    style?: "outline" | "primary" | "inverted" | "muted";
    class?: string;
    [x: string]: any;
}

const {
    href,
    icon,
    label,
    size = "current",
    style = "primary",
    class: className,
    ...rest
} = Astro.props;

---

<a href={href} target="_blank" class="text-current">
    <div class=`flex flex-col items-center sm:flex-row gap-x-1 ${size === "lg"? "text-4xl": "text-current"}`>
        <Icon name=`lucide:${icon}` aria-label={label} />
        <span>{href}</span>
    </div>
</a>
